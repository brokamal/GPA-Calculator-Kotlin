<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/new_subject_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Subject Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/new_credits"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Credits"
            android:inputType="number" />

        <Spinner
            android:id="@+id/new_grade_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/add_subject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Subject" />

    <Button
        android:id="@+id/remove_subject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Subject" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/subjects_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/calculate_gpa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate GPA" />

    <TextView
        android:id="@+id/gpa_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA: " />
</LinearLayout>
